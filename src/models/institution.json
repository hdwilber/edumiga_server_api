{
  "name": "Institution",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "prename": { "type": "string" },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "country": "string",
    "state": "string",
    "province": "string",
    "county": "string",
    "phone": "string",
    "adminType": {
      "type": "string",
      "default": "main"
    },
    "location": {
      "point": {
        "type": "GeoPoint",
        "default": null
      },
      "zoom": {
        "type": "number",
        "default": 10
      }
    },
    "categories": [{ "type": "string" }],
    "levels": [{"type": "string"}],
    "draft": {
      "type": "boolean",
      "default": true
    },
    "created": {
      "type": "date",
      "required": true
    },
    "updated": {
      "type": "date",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "account": {
      "type": "belongsTo",
      "model": "Account",
      "foreignKey": "accountId"
    },
    "locations": {
      "type": "hasMany",
      "model": "Location",
      "foreignKey": "institutionId"
    },
    "main": {
      "type": "belongsTo",
      "model": "Institution",
      "foreignKey": "parentId"
    },
    "children": {
      "type": "hasMany",
      "model": "Institution",
      "foreignKey": "parentId"
    },

    "logo": {
      "type": "belongsTo",
      "model": "MediaFile",
      "foreignKey": "logoId"
    },
    "opportunities": {
      "type": "hasMany",
      "model": "Opportunity",
      "foreignKey": "institutionId"
    },
    "media": {
      "type": "hasMany",
      "model": "MediaFile",
      "polymorphic": {
        "selector": "mediable"
       } 
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "*"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "ALLOW",
      "property": "find"
    },
    {
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "ALLOW",
      "property": "findById"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "*"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "uploadMedia"
    }
  ],
  "methods": {}
}
