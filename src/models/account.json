    "verificationToken": "string",
    "verifiedEmail": "boolean",
    "created": "Date",
    "updated": "Date"
  },
  "relations": {
    "accessTokens": {
      "type": "hasMany",
      "model": "AccountAccessToken",
      "polymorphic": {
        "foreignKey": "accountId",
        "discriminator": "principalType"
      },
      "options": {
        "disableInclude": true
      }
    },
    "identities": {
      "type": "hasMany",
      "model": "AccountIdentity",
      "foreignKey": "accountId"
    },

    "credentials": {
      "type": "hasMany",
      "model": "AccountCredential",
      "foreignKey": "accountId"
    }
  },
