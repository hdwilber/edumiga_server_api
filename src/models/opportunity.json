{
  "name": "Opportunity",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "duration": {
      "type": "number",
      "default": null
    },
    "regime": {
      "type": "string",
      "default": "yearly"
    },
    "startedFrom": {
      "type": "Date"
    },
    "type": {
      "type": "string"
    },
    "draft": {
      "type": "string"
    },
    "created": {
      "type": "date",
      "required": true
    },
    "updated": {
      "type": "date",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "account": {
      "type": "belongsTo",
      "model": "Account",
      "foreignKey": "accountId"
    },
    "logo": {
      "type": "belongsTo",
      "model": "MediaFile",
      "foreignKey": "logoId"
    },
    "courses": {
      "type": "hasMany",
      "model": "Course",
      "foreignKey": "opportunityId"
    },
    "institution": {
      "type": "belongsTo",
      "model": "Institution",
      "foreignKey": "institutionId"
    },
    "media": {
      "type": "hasMany",
      "model": "MediaFile",
      "polymorphic": {
        "selector": "mediable"
       } 
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "*"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "ALLOW",
      "property": "find"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "findById"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "uploadMedia"
    }
  ],
  "methods": {}
}
