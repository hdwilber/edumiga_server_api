{
  "name": "Category",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string"
    },
    "key": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "created": {
      "type": "date",
      "required": true
    },
    "updated": {
      "type": "date",
      "required": true
    }
  },
  "relations": {
    "parent": {
      "type": "belongsTo",
      "model": "Category",
      "foreignKey": "parentId"
    },
    "children": {
      "type": "hasMany",
      "model": "Category",
      "foreignKey": "parentId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "*"
    }
  ]
}
